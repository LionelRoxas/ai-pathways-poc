GROQ_API_KEY=""
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# LangGraph-Style Orchestrator Feature Flag
# Set to "true" to use the new LangGraph-style orchestrator with improved accuracy
# Set to "false" or leave unset to use the original orchestrator
USE_LANGGRAPH_STYLE=false

# pgVector Database Configuration (for fast semantic search)
# Get from: Neon (https://neon.tech), Supabase, or local PostgreSQL
DATABASE_URL="postgresql://user:password@host:5432/dbname"
PGVECTOR_POOL_SIZE=10

# OpenAI API Key (for embeddings generation)
# Get from: https://platform.openai.com/api-keys
# Used for one-time embedding generation (~$0.05-0.10 total cost)
OPENAI_API_KEY=""

# Feature Flags
USE_PGVECTOR_SEARCH=false   # Enable pgVector search (true) or use old LLM search (false)
CACHE_EMBEDDINGS=true        # Cache query embeddings in Redis
